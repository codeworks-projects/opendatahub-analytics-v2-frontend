{
   "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      // The setting `"skiplibCheck": true` was added due to a bug in vue-json-pretty
      // (see https://github.com/leezng/vue-json-pretty/issues/121).
      // Please remove this setting as soon as the bug is resolved!
      "skipLibCheck": true
   },
   "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
